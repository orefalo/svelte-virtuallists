{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".husky": true,
    ".vscode": true,
    ".idea": true,
    "node_modules": true
  },
  "hide-files.files": [
    ".husky",
    ".vscode",
    ".idea",
    "node_modules"
  ],
  "files.eol": "\n",
  "editor.insertSpaces": false,
  "[typescript]": {
    "editor.tabSize": 4
  },
  "[javascript]": {
    "editor.tabSize": 4
  }
}
